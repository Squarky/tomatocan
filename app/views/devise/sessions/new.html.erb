<% @title=" Community " %>

<div class="row" >
  <div class="col-md-4 col-sm-offset-2 col-sm-5 col-sm-offset-1 col-xs-12 " style= "text-align:left" >

    <% if request.host == "crowdpublishtv.herokuapp.com" %>
      Confirm your secure login to sign up for Stripe Payments so you can receive crowdfunding from your fans!
    <% end %>

    <div class="featured" >
      Sign in
    </div><br>

    <%= form_for(resource, :as => resource_name, :url => user_session_path) do |f| %>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true, :size => 40 %></div><br>

      <div><%= f.label :password %><br />
      <%= f.password_field :password, :size => 40 %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <br>  I still agree to the CrowdPublishTV
       <%= link_to("Terms of Service", tos_path, :target => "_blank" ) %>
      <br><br><div><%= f.submit "Sign in" %></div>
    <% end %>
  </div>

  <div class="col-md-4 col-sm-4 col-xs-12 " style= "text-align:left" >
    <br>Not a member? <p>
    <%= render "devise/shared/links" %>

  </div>
</div>
