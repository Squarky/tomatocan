<div class="container-flex">

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="10000" style="margin-top:-20px; height:400px;">
  <!-- Indicators --0
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner"> 
    <div class="item active" style="height:400px;">
      <img src="http://www.CrowdPublish.TV/bookDude.png" alt="Hangouts">
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>


<div class="container-flex">
  <div class="row" style = "position: absolute; top:20px; text-align:center; width: 100vw" >
      <div class="whitetxt", style="position:relative; z-index: 9999; font-size:50px; text-shadow: 1px 1px #000;">
        <br>Be on Interactive TV and get Crowdfunding
      </div><br><br> <br> 

      <div class="lavenderlink" style="text-shadow: 1px 1px #000; margin-top:20px; z-index: 1;">
        <% if user_signed_in? %>
          <%= link_to "Offer Perks", new_merchandise_path, :class => "btn btn-primary", style: "font-size:24px; background:#6e73d1; color:#fff; z-index: 999999;" %>
        <% else %>
          <%= link_to "Start my Account", new_user_signup_path, :class => "btn btn-primary ", style: "font-size:24px; background:#6e73d1; color:#fff; z-index: 999999;" %>
        <% end %>

        <%= link_to "Livestream", "/livestream", :class => "btn btn-primary", style: "font-size:24px; background:#6e73d1; color:#fff; z-index: 999999; margin-left: 220px;" %>
      </div>
  </div>
</div>
  <div class="row unfixed-header" >
    <div class="navbar-inner " >
      <ul class="nav navbar-nav pull-left" style="padding-left:20px; font-size:16px;">
        <li><%= link_to "What is CrowdPublishTV", '/aboutus' %>
        <li><%= link_to "SUPPORT EACH OTHER", userswithmerch_path %>
        <% if user_signed_in? %>
          <li><%= link_to 'EARN FUNDS', new_merchandise_path %>
        <% else %>
          <li><%= link_to 'EARN FUNDS', "/signup" %>
        <% end %>
        <li><%= link_to "FAQ", '/faq' %>
        <% if user_signed_in? %>
          <li><%= link_to current_user.name, user_profile_path(current_user.permalink) %>
          <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete%>
        <% else %>
          <li><%= link_to 'Sign in', "/login" %>
        <% end %>
      </ul>
    </div> 
  </div>

  <div class="row">
    <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top:20px; padding-right:30px;">
      <div class = "helps" style = "font-size:24px; margin-top:10px; text-align:left">
        <span class="dot" style = "margin-top:10px"></span>
        Earn support from viewers<br><br>
        <span class="dot" style = "margin-top:10px"></span>
        <%= link_to "Tell all your friends & fans", '/tellfriends', style:"color:red;", title: "Announce your CrowdPublish Campaign on twitter, facebook, email, from rooftops..." %> <br><br>
        <span class="dot" style = "margin-top:10px"></span>
        Receive more than just books & movies from your favorite live hosts<br><br>
     </div>
    </div>

    <div class="col-md-6 col-sm-6 col-xs-12" style="padding-top:20px">
      <%= render 'layouts/maincalendar' %>

    </div>
  </div>
<br>

<div class="row" > 
  <% @merchusers.each do |u| %>
    <div class="col-md-4 col-sm-4 col-xs-6" >
      <div class="row hiddenover" >
        <% if u.youtube1.present? %>
          <div class="r" style="vertical-align:top; horizontal-align:center; height:290px; width:395px; overflow:hidden;" >
            <iframe width="370" height="220" src="//www.youtube.com/embed/<%= u.youtube1 %>" frameborder="0" allowfullscreen></iframe>
            <br><%= link_to u.name, user_profile_path(u.permalink) %>
          </div>
        <% elsif u.profilepic.present? %>
          <%= link_to(image_tag(u.profilepic.url.to_s, :height => "220",  :title => u.name), user_profile_path(u.permalink)) %> 
        <% end %>
        <br><%= link_to u.name, user_profile_path(u.permalink) %>
      </div>
    </div><br>
  <% end %>
</div><br>

  <div class="indexlist" >
    <b>Browse more CrowdPublish.TV campaigns</b><br> <%= will_paginate @merchusers %> <br>
  </div><br><br>

