<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title> <% "Support " + @user.name + "'s Projects" %> </title>
<meta property="og:url" content="http://CrowdPublish.TV" />
<meta property="og:image" content="http://crowdpublish.tv/images/crowdpublishLogo.png" />
<meta property="og:description" content="CrowdPublishTV helps actors, filmmakers, authors increase fan engagement & raise more funds" />
</head>

<% @title="Get Sneak Preview access to " + @user.name + " stories here!" %>

<div id="wrapper">
  <div id="page-content-wrapper">
    <div class="page-content" >
      <div class="container-flex" style="margin-top:-30px; ">
    
<% if @user.author == 'author' || @user.author == 'storyteller' %>

  <div class="row " >
    <div class="col-md-12 col-sm-12 col-xs-12" >
      <% if @user.phases.any? %> 
        <h2>Get Sneak Preview access to my current project!</h2><br>
        <div style="float:left; text-align:left;">
          <%= form_for(Agreement.new) do |f| %> 
            <% if @numusrgroups == 1 %>
              Partner <%= @usrgrpnameid[0][0] %> with my Campaign and your organization will receive 5% of the proceeds from Fans you refer from <%= @usrgrpnameid[0][0] %>'s home page.<br><br>
              <%= f.hidden_field :group_id, value: @usrgrpnameid[0][1] %>
            <% end %>
            <% if @numusrgroups > 1 %>
              Select one of your organizations to partner with my Campaign: <%= f.select :group_id, options_for_select(@usrgrpnameid, prompt: true) %><br><br>
            <% end %>

            <table>
              <tr><td>
              <% if @numusrgroups > 0 %>
                <%= button_tag 'Partner', value: @sidebarphase.id, type: :submit, name: "agreement[phase_id]" %>
              <% end %>
              </td>
          <% end %>
              <td style='font-size:22px'><%= link_to(@sidebarphase.name, phase_path(@sidebarphase.permalink)) %></td></tr>
              <tr><td ><%= button_to "Get Sneak Preview", phase_path(@sidebarphase.permalink), method: :get, class: 'button' %></td>

              <td class = 'blacktxt'><%= truncate(@sidebarphase.mission , :length => 200, :separator => ' ') %> </td></tr>
            </table><br>
          <% if @numusrphs > 1 %>
            <%= link_to("View my past Campaigns", user_phases_path(@user.permalink)) %><br><br><br>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  
      <div class="row" >
        <div class="col-xs-12" >
          <% if @sidebarphase.youtube? %>
            <% if @sidebarphase.youtube.match(/[0-9A-Za-z]/) && @sidebarphase.youtube.length < 20 %>
              <iframe width="420" height="315" src="//www.youtube.com/embed/<%= @sidebarphase.youtube %>" frameborder="0" allowfullscreen></iframe>
            <% end %>
          <% end %>
        </div>
      </div>
      <br><br>

<% else  %>
      <div class="profilebox" >
        <% if @user.about %> 
          <%= simple_format @user.about.gsub(/\r\n/, '<br>') %> <br><br>
        <% end %>
      </div>
      <div class="row" >
        <div class="col-md-7 col-md-offset-1 col-sm-7 col-xs-7 " >
          <% if @user.twitter %>
            <a class="twitter-timeline"    
              data-widget-id="375760459510464512"
              data-screen-name="<%= @user.twitter %>" data-show-replies="false"
              data-tweet-limit="5">Tweets by @<%= @user.twitter %> </a>
          <% end %>
        </div>
      </div>
<% end %>

    </div>
  </div>
</div>
</div>
